<Window x:Class="RobotFilesEditor.Dialogs.BaseShifter.BaseShifterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotFilesEditor.Dialogs"
        mc:Ignorable="d"
        Title="BaseShifterWindow" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="5,5,5,5">
            <TextBlock Text="{Binding InputText}" Margin="5,5,5,5"/>
            <TextBox Text="{Binding BaseData}" MinWidth="150" Margin="5,5,5,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Width="50" Command="{Binding OK}" Margin="5,5,5,5"/>
                <Button Content="Cancel" Width="50" Command="{Binding Cancel}" Margin="5,5,5,5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
