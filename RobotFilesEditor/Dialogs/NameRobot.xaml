<Window x:Class="RobotFilesEditor.Dialogs.NameRobot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotFilesEditor.Dialogs"
        mc:Ignorable="d"
        Title="NameRobot" Height="150" Width="300" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Text="Type the name of the robot" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,10,20,10"/>
            <TextBox Text="{Binding RobotName}" Width="200" Margin="20,10,20,10"/>
            <Button Content="OK" Click="Button_Click" Width="50" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
